<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PamentOptions">

    <Button
        android:id="@+id/debit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="3dp"
        android:text="Debit"
        app:layout_constraintEnd_toStartOf="@+id/masterCard_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/masterCard_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MC"
        app:layout_constraintBaseline_toBaselineOf="@+id/debit_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/debit_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>